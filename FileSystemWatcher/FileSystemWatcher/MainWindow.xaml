<Window x:Class="FileSystemWatcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileSystemWatcher"
        xmlns:models="clr-namespace:FileSystemWatcher.Models"
        mc:Ignorable="d"
        Title="File System Watcher" Height="450" Width="800">
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    <ListView ItemsSource="{Binding Actions, Mode=OneWay}">
        <ListView.View>
            <GridView>
                <GridView.Columns>
                    <GridViewColumn DisplayMemberBinding="{Binding Action}">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate DataType="{x:Type models:Actions}">
                                
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Action}" />
                    <GridViewColumn DisplayMemberBinding="{Binding Filename}" />
                    <GridViewColumn DisplayMemberBinding="{Binding ActionTime}" />
                </GridView.Columns>
            </GridView>
        </ListView.View>
    </ListView>
</Window>
